.tab
  background: #ccc
  padding: 0 1em
  display: inline-block
  margin: 0 3px
  border-radius: 5px 5px 0 0
  color: #fff
  font-weight: bold
  cursor: pointer
  &:hover
    color: #fff
    text-decoration: none
  &:last-child
    margin-right 0
  &.is-selected
    background: colors.primary
  &.is-ely-selected
    margin-left 40px
    background: #00aacc
  &.is-ely
    margin-left 40px
    background: #00aacc
