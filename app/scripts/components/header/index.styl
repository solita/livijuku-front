.navbar
  border-radius: 0px

.header__button
  padding: 0 0.5em
  .header__link
    padding: 1em 0.5em
    color: #fff

  &:hover:not(.is-active)
    .header__link
      margin-top: 0.5em
      padding: 0.5em 0.5em
      border-radius: 3px
      background: rgba(8, 96, 164, .4)
      transition: background-color 90ms ease

  &.is-active
    background-color: #ffffff
    border-radius: 3px 3px 0px 0px
    top: 8px
    height: 42px
    .header__link
      padding-top 0.5em
      color: colors.text


// Bootstrap overwrites
.nav>li>a:focus, .nav>li>a:hover
  background: transparent

.nav .open>a, .nav .open>a:focus, .nav .open>a:hover
  background: transparent

.navbar-toggle .icon-bar
  background: #fff

.header
  .container
    line-height: height.navbar
  .nav
    height: 100%
  .header__content
    height: height.navbar
  .user-dropdown
    float: right


@media (max-width: 768px)
  .header__content
    display: none

// Statistics dropdown context styles
.header__button.is-active
  .statistic-dropdown
    .dropdown-toggle
      color: colors.text

    .dropdown-toggle__wrapper
      &:before
        background: url('../images/header_dropdown_active.svg')
        height: 11px
        width: 13px
        margin-top: -7px
        opacity: 0.25

    .dropdown-menu
      left: -8px
